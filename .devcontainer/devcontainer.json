{
    "name" : "dev_environment_container",
    // "build": {"dockerfile": "dockerfile"},
    "dockerComposeFile": "../source/Docker-Compose.yml",
    "service": "python_environment",
    "workspaceFolder": "/container/Project_1",
    "customizations": {
      // Configure properties specific to VS Code.
      "vscode": {
        // Add the IDs of extensions you want installed when the container is created.
        "extensions": ["streetsidesoftware.code-spell-checker"
                      ,"formulahendry.code-runner"
                      ,"ms-python.debugpy"
                      ,"ms-python.python"
                      ,"usernamehw.remove-empty-lines"
                      ,"adpyke.vscode-sql-formatter"
                      ,"vscode-icons-team.vscode-icons"
                      ,"redhat.vscode-yaml"
                      ,"pascalreitermann93.vscode-yaml-sort"
                      ,"ms-toolsai.jupyter"      
                      ,"ms-azuretools.vscode-docker"
                      ]
      }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "runArgs": ["--name", "dev_environment_container"]
  }